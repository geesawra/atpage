{
  "lexicon": 1,
  "id": "industries.geesawra.atpage",
  "defs": {
    "main": {
      "type": "record",
      "description": "A record holding pointing to page content, addressable by its record key",
      "key": "any",
      "record": {
        "type": "object",
        "required": [
          "title",
          "content"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "blob",
            "accept": [
              "text/html"
            ]
          },
          "embeds": {
            "type": "array",
            "items": {
              "type": "blob",
              "accept": [
                "*"
              ]
            }
          }
        }
      }
    }
  }
}